
	<h1 align="center">Listing All Articles</h1>	


<% @articles.each do |article|%>
<div class="row">
	<div class="col-sm-10 offset-sm-2">
		<div class="card">
			<div class="card-header article-title">
				<%= link_to article.title, article_path(article)%>
			</div>
			<div class="card-body">
				<%= truncate(article.description, length: 100)%>
			</div>
			<div class="card-footer article-body">
				<%= link_to 'Edit this article', edit_article_path(article), class: 'btn btn-sm btn-primary '%>
				<%= link_to 'Delete this article', article_path(article), method: :delete, data: {confirm: 'Anda yakin?'}, class: 'btn btn-sm btn-danger'%>
			</div>
		</div>
	</div>
</div>
<% end %>

